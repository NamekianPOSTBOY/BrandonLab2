<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".rodriguesActivityDetached">

        <ImageView
            android:id="@+id/brandon_ImageBoxD1"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/brandon_TextBoxD1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.054"
            app:srcCompat="@drawable/detached1"
            android:contentDescription="@string/detached1" />

        <TextView
            android:id="@+id/brandon_TextBoxD1"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:gravity="center_vertical"
            android:text="@string/detached1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.054" />
        <CheckBox
            android:id="@+id/brandon_CheckBoxD1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/visit_v_p"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toEndOf="@+id/brandon_TextBoxD1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024" />




        <ImageView
            android:id="@+id/brandon_ImageBoxD2"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brandon_ImageBoxD1"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/detached2"
            android:contentDescription="@string/detached2" />

        <TextView
            android:id="@+id/brandon_TextBoxD2"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:gravity="center_vertical"
            android:text="@string/detached2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brandon_TextBoxD1" />

        <CheckBox
            android:id="@+id/brandon_CheckBoxD2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:text="@string/visit_v_p"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toEndOf="@+id/brandon_TextBoxD2"
            app:layout_constraintTop_toBottomOf="@+id/brandon_CheckBoxD1"
            app:layout_constraintVertical_bias="0.047" />


        <ImageView
            android:id="@+id/brandon_ImageBoxD3"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brandon_ImageBoxD2"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/detached3"
            android:contentDescription="@string/detached3" />

        <TextView
            android:id="@+id/brandon_TextBoxD3"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:gravity="center_vertical"
            android:text="@string/detached3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brandon_TextBoxD2"
            app:layout_constraintVertical_bias="0.0" />

        <CheckBox
            android:id="@+id/brandon_CheckBoxD3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:text="@string/visit_v_p"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toEndOf="@+id/brandon_TextBoxD3"
            app:layout_constraintTop_toBottomOf="@+id/brandon_CheckBoxD2"
            app:layout_constraintVertical_bias="0.005" />

        <ImageView
            android:id="@+id/brandon_ImageBoxD4"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/brandon_TextBoxD4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/detached4"
            android:contentDescription="@string/detached4" />
        <TextView
            android:id="@+id/brandon_TextBoxD4"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:gravity="center_vertical"
            android:text="@string/detached4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brandon_TextBoxD3" />
        <CheckBox
            android:id="@+id/brandon_CheckBoxD4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:text="@string/visit_v_p"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.522"
            app:layout_constraintStart_toEndOf="@+id/brandon_TextBoxD4"
            app:layout_constraintTop_toBottomOf="@+id/brandon_CheckBoxD3"
            app:layout_constraintVertical_bias="0.09" />

        <Button
            android:id="@+id/brandon_DetachedCheckout"
            android:layout_width="98dp"
            android:layout_height="45dp"
            android:text="@string/checkoutBttn"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.932"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>